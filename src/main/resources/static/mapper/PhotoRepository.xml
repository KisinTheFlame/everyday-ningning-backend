<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="tech.kisin.everydayningning.dao.PhotoRepository">
    <select id="count" resultType="int">
        SELECT count(*)
        FROM photo
    </select>
    <select id="findByIndex" resultType="PhotoPO">
        SELECT *
        FROM photo
        LIMIT #{index}, 1
    </select>
    <select id="getAll" resultType="PhotoPO">
        SELECT *
        FROM photo
    </select>
    <update id="countUpFrequency">
        UPDATE photo
        SET frequency = frequency + 1
        WHERE id = #{id}
    </update>
</mapper>
